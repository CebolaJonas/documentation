{
    "name": "markdoc-hugo-integration",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "test": "npm run build; vitest run --coverage --reporter=verbose",
        "build-markdoc-integration": "rimraf ./dist && npx tsc; npm run copy-assets",
        "build-prod-renderer": "npx esbuild ./src/markdoc-client-renderer.js --metafile=esbuild-meta-prod.json --tree-shaking=true --bundle --minify --outfile='./src/helperModules/PageBuilder/compiledScripts/markdoc-client-renderer.min.js'",
        "build-dev-renderer": "npx esbuild ./src/markdoc-client-renderer.js --metafile=esbuild-meta-dev.json --tree-shaking=true --bundle --outfile='./src/helperModules/PageBuilder/compiledScripts/markdoc-client-renderer.js'",
        "build": "npm run build-markdoc-integration && npm run build-dev-renderer && npm run build-prod-renderer && npm run copy-assets && npm run copy-compiled-scripts",
        "copy-assets": "cp -r ./src/helperModules/PageBuilder/assets ./dist/helperModules/PageBuilder",
        "copy-compiled-scripts": "cp -r ./src/helperModules/PageBuilder/compiledScripts ./dist/helperModules/PageBuilder"
    },
    "dependencies": {
        "js-yaml": "^4.1.0",
        "lit": "^3.1.4",
        "markdoc-static-compiler": "file:../markdoc-static-compiler",
        "rimraf": "^5.0.5",
        "rollup": "^4.19.1",
        "stringcase": "^4.3.1",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/js-yaml": "^4.0.9",
        "@types/lodash": "^4.17.7",
        "@types/node": "^20.11.30",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@vitest/coverage-v8": "^2.0.2",
        "esbuild": "0.20.2",
        "typescript": "^5.4.3",
        "vitest": "^2.0.2"
    }
}
