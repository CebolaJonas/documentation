{
    "name": "markdoc-hugo-integration",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "test": "npm run build; vitest run --coverage --reporter=verbose",
        "build-markdoc-integration": "rimraf ./dist && npx tsc; npm run copy-assets",
        "build-prod-renderer": "npx esbuild ./src/markdoc-client-renderer.js --bundle --minify > ./dist/markdoc-client-renderer.min.js",
        "build-dev-renderer": "npx esbuild ./src/markdoc-client-renderer.js --bundle > ./dist/markdoc-client-renderer.js",
        "build": "npm run build-markdoc-integration && npm run build-dev-renderer && npm run build-prod-renderer",
        "copy-assets": "cp -r ./src/helperModules/HtmlBuilder/templates ./dist/helperModules/HtmlBuilder/templates"
    },
    "dependencies": {
        "handlebars": "^4.7.8",
        "js-yaml": "^4.1.0",
        "markdoc-static-compiler": "file:../markdoc-static-compiler",
        "rimraf": "^5.0.5",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^20.11.30",
        "@vitest/coverage-v8": "^2.0.2",
        "esbuild": "0.20.2",
        "typescript": "^5.4.3",
        "vitest": "^2.0.2"
    }
}
